<?xml version="1.0" encoding="UTF-8"?>
<robot name="ezgripper" xmlns:xacro="http://ros.org/wiki/xacro">

<xacro:property name="ezgripper_offset_x" value="0.0" />
<xacro:property name="ezgripper_offset_y" value="0.0" />
<xacro:property name="ezgripper_offset_z" value="0.3" />


<xacro:include filename="$(find ezgripper_driver)/urdf/quad/ezgripper_quad.urdf.xacro" />

<!-- Add the gripper -->
<xacro:ezgripper_quad parent_link="link8" >
	<origin xyz="${ezgripper_offset_x} ${ezgripper_offset_y} ${ezgripper_offset_z}" rpy="-1.57 0 0" />
</xacro:ezgripper_quad>

</robot>